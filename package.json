{
    "name": "reco-desktop",
    "version": "0.1.0",
    "private": true,
    "homepage": "./",
    "main": "public/electron.js",
    "dependencies": {
        "@testing-library/jest-dom": "^4.2.4",
        "@testing-library/react": "^9.5.0",
        "@testing-library/user-event": "^7.2.1",
        "@types/react-helmet": "^5.0.15",
        "@types/react-redux": "^7.1.7",
        "electron-cookies": "^1.1.0",
        "electron-is-dev": "^1.2.0",
        "react": "^16.13.0",
        "react-day-picker": "^7.4.0",
        "react-dom": "^16.13.0",
        "react-fetch-progressbar": "^1.0.0",
        "react-helmet": "^5.2.1",
        "react-redux": "^7.2.0",
        "react-scripts": "3.4.0",
        "react-transition-group": "^4.3.0",
        "redux": "^4.0.5",
        "rsuite": "^4.3.0",
        "universal-cookie": "^4.0.3"
    },
    "scripts": {
        "build": "tsc electron.ts && cp electron.js ./public/electron.js && rm electron.js",
        "dev": "concurrently \"BROWSER=none react-scripts start\" \"wait-on http://localhost:3000 && electron .\"",
        "dist": "react-scripts build && electron-builder ./build/electron.js"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@types/node": "12.12.6",
        "@types/react-transition-group": "^4.2.4",
        "concurrently": "^5.1.0",
        "electron": "^8.1.0",
        "electron-builder": "^22.4.0",
        "electron-packager": "^14.2.1",
        "typescript": "^3.8.3"
    },
    "build": {
        "appId": "com.yuanlin.reco",
        "productName": "Reco",
        "directories": {
            "output": "dist"
        },
        "mac": {
            "icon": "icon.png"
        },
        "win": {
            "icon": "icon.png"
        },
        "linux": {
            "icon": "icon.png"
        }
    }
}
